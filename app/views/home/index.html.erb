<h1>NEWS</h1>


	<table>
	

	<thead>
		<th>Nom de la source</th>
		<th>Auteur</th>
		<th>Titre</th>
		<th>Description</th>
	
	</thead>

	<tbody>
		<% @response_body['articles'].each do |article| %>
	<tr>
	<td><%= article["source"]['name'] %></td>
	<td><%= article["author"] %></td>
	<td><%= EasyTranslate.translate(article["description"], :to => :french)  %></td>
	<td><a href= "<%= "https://translate.google.fr/translate?sl=en&tl=fr&js=y&prev=_t&hl=fr&ie=UTF-8&u="+ article["url"] +"&edit-text=&act=url"%>"> <img src="<%= article["urlToImage"] %>" alt="Image de l'article" > </a></td>
	<td></td>

</tr>
<% end %>


</tbody>
</table>






	






