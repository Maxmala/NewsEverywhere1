
<section class="slice sct-color-1" >
	<div class="container">
	<div class="section-title section-title--style-1 text-center">
		<h3 class="section-title-inner heading-2 strong-400">Personalisez votre sélection d'articles</h3>
	</div>
	</div>
<div class="container">


<%= form_for(@user) do |f| %>

